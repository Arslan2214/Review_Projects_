<% include ./partials/header.ejs %> <% include ./partials/navbar.ejs %>
<main class="py-16">
  <p class="text-5xl font-semibold text-zinc-800 text-center my-5">Welcome to Pintrest</div>
  <section
    class="w-full lg:columns-5 md:columns-4 sm:columns-3 columns-1 px-10 mt-8"
  >
   <% if (posts.length <= 0) {  %>
    <p class="text-2xl font-regular">Sorry, No posts</p>
    <% } else { posts.map(post => {  %>
    <a
    href="/viewpost/<%= post._id %>"
    class="relative my-4 shadow-md hover:shadow-lg transition-all duration-300 hover:scale-[1.01] group overflow-hidden w-42 flex flex-col justify-center items-center rounded-sm"
    >
      <img class="object-cover w-full rounded-t-sm" src="/images/uploads/<%= post.postImage %>" alt="pic" />
      <div class="absolute transition-all duration-800 -left-0 -bottom-[100%] group-hover:bottom-2 bg-black opacity-80 text-white w-full text-start p-2">
        <div class="font-semibold text-lg"><%= post.title %></div>
        <div class="text-[13px] text-white opacity-80">
          <span>@<%= post.user.username %></span>
        </div> 
      </div>
    </a>
    <% })} %>
  </section>
</main>


<% include ./partials/footer.ejs %>
